<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <form class="product-form" action="<% if (editing) { %> /admin/edit-product <% } else { %> /admin/add-product <% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= editing ? product.title : '' %>">
            </div>
            <!-- https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png -->
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= editing ? product.imageUrl : '' %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= editing ? product.price : '' %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" ><%= editing ? product.description : '' %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" name="id" id="id" value="<%= product.id %>">
            <% } %>
            <button class="btn" type="submit"><% if (editing) { %> Save <% } else { %> Add Product <% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>